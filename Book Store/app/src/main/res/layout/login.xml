<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#DDDBD6"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="530dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:background="@drawable/backgroundforlogindesin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="20dp"
                android:layout_marginTop="20dp"
                android:text="Welcome To You In Our BookStore!"
                android:textColor="#23190B"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/emailid"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/editetext_back"
                android:drawableStart="@drawable/ic_user_image"
                android:hint="Enter Your Email"
                android:inputType="textEmailAddress"
                android:onClick="enteryouremail"
                android:paddingHorizontal="20dp"
                android:paddingLeft="20dp"
                android:textColorHint="#0E0D09"
                android:textSize="20dp"

                />

            <EditText
                android:id="@+id/emailwrong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginHorizontal="20dp"
                android:paddingLeft="0dp"
                android:text="Wrong  Email"
                android:textColor="#D60909"
                android:textSize="15dp"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/editetext_back"
                android:drawableStart="@drawable/ic_lock"
                android:hint="Enter Your Passward"
                android:inputType="textPassword"
                android:onClick="passward"
                android:paddingHorizontal="20dp"
                android:paddingLeft="20dp"
                android:textColorHint="#0E0D09"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/passwrong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginHorizontal="20dp"
                android:paddingLeft="0dp"
                android:text="Wrong  passward"
                android:textColor="#D60909"
                android:textSize="15dp"
                android:visibility="invisible"

                />

            <Button
                android:id="@+id/loginid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:background="@drawable/editetext_back"
                android:onClick="loginclick"
                android:text="Login"
                android:textColor="#000000"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Don't have an account ?"
                android:textColor="#23190B"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/gotosignupid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Sign Up"
                android:textColor="#A1998D"
                android:textSize="30dp"
                android:textStyle="bold"


                />

        </LinearLayout>


    </LinearLayout>
</ScrollView>