<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#DDDBD6"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_gravity="center"
            app:lottie_url="REPLACE_JSON_URL"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/animation"

            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_530sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_weight="1"
            android:background="@drawable/backgroundforlogindesin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="@dimen/_20sdp"
                android:text="Welcome To You In Our BookStore!"
                android:textColor="#23190B"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/emailid"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:background="@drawable/editetext_back"
                android:drawableStart="@drawable/ic_user_image"
                android:hint="Enter Your Email"
                android:inputType="textEmailAddress"
                android:onClick="enteryouremail"
                android:paddingHorizontal="@dimen/_20sdp"
                android:paddingLeft="@dimen/_20sdp"
                android:textColorHint="#0E0D09"
                android:textSize="@dimen/_15ssp"

                />

            <EditText
                android:id="@+id/emailwrong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:paddingLeft="0dp"
                android:text="Wrong  Email"
                android:textColor="#D60909"
                android:textSize="@dimen/_15sdp"
                android:visibility="invisible"
                />

            <EditText
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:background="@drawable/editetext_back"
                android:drawableStart="@drawable/ic_lock"
                android:hint="Enter Your Passward"
                android:inputType="textPassword"
                android:onClick="passward"
                android:paddingHorizontal="@dimen/_20sdp"
                android:paddingLeft="@dimen/_20sdp"
                android:textColorHint="#0E0D09"
                android:textSize="@dimen/_15ssp"
                />

            <EditText
                android:id="@+id/passwrong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:paddingLeft="0dp"
                android:text="Wrong  passward"
                android:textColor="#D60909"
                android:textSize="@dimen/_15sdp"
                android:visibility="invisible"

                />

            <Button
                android:id="@+id/loginid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_35sdp"
                android:background="@drawable/editetext_back"
                android:onClick="loginclick"
                android:text="Login"
                android:textColor="#000000"
                android:textSize="@dimen/_20sdp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Don't have an account ?"
                android:textColor="#23190B"
                android:textSize="@dimen/_15ssp"

                />

            <TextView
                android:id="@+id/gotosignupid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="Sign Up"
                android:textColor="#A1998D"
                android:textSize="@dimen/_30sdp"
                android:textStyle="bold"


                />

        </LinearLayout>


    </LinearLayout>
</ScrollView>